html, body
  margin 0
  padding 0
  width 100%
  height 100%

body
  background-color #455A64
  background-size cover
  background-position center
  font 14px 'microsoft yahei'
  color #333333
  font-weight 500

.el-footer {
	background-color: #546E7A;
	color: #fff;
	text-align: center;
	line-height: 56px;
}

.el-header {
	background-color: #546E7A;
	color: #fff;
	border: 0px solid #f00;
	padding:0px;
}

.el-main {
	width: 100%;
	height: 700px;
	padding:10px;
	white-space: nowrap;
	overflow: hidden;
	overflow-x: auto;
	-webkit-backface-visibility: hidden;
	-webkit-perspective: 1000;
	-webkit-overflow-scrolling: touch; /* 2 */
	text-align: justify; /* 3 */
	&::-webkit-scrollbar {
			display: block;
	}

	border:0px solid #000;
 }

 .ghost {
   opacity: .1;
 }
